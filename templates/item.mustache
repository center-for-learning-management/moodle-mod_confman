<div class="mod_confman_item">
    <table border="1" width="80%">
        <tr>
            <th width="150">{{#str}} item:event, confman {{/str}}</th>
            <td>{{eventname}}</td>
        </tr>
        <tr>
            <th>{{#str}} item:title, confman {{/str}}</th>
            <td>{{title}}</td>
        </tr>
        <tr>
            <th>{{#str}} item:contributor, confman {{/str}}</th>
            <td><a href="mailto:{{email}}">{{contributor}}</a></td>
        </tr>
        <tr>
            <th>{{#str}} item:organization, confman {{/str}}</th>
            <td>{{organization}}</td>
        </tr>
        <tr>
            <th>{{#str}} item:type, confman {{/str}}</th>
            <td>{{#types}}{{.}} {{/types}}</td>
        </tr>
        <tr>
            <th>{{#str}} item:targetgroup, confman {{/str}}</th>
            <td>{{#targetgroups}}{{.}} {{/targetgroups}}</td>
        </tr>
        <tr>
            <th>{{#str}} item:description, confman {{/str}}</th>
            <td>{{{description}}}</td>
        </tr>
        <tr>
            <th>{{#str}} item:memo, confman {{/str}}</th>
            <td>{{{memo}}}</td>
        </tr>
        <tr>
            <th>{{#str}} item:files, confman {{/str}}</th>
            <td>
                {{#files}}<a href="{{url}}" target="_blank" data-role="button" data-inline="true" data-icon="tag">{{filename}}</a> {{/files}}
                {{^files.0}}{{#str}} none {{/str}}{{/files.0}}
            </td>
        </tr>
    </table>
</div>
