<h1>{{eventtitle}}</h1>
{{#items}}
<h2>{{title}}</h2>
<table width="100%" class="generaltable">
    <tr>
        <td width="50%">{{organization}}</td>
        <td>{{#title_pre}}{{title_pre}} {{/title_pre}}{{firstname}} {{lastname}}, {{#title_post}} {{title_post}}{{/title_post}} ({{email}})</td>
    </tr>
    <tr>
        <td>
            {{#str}} item:targetgroup, mod_confman {{/str}}
            <ul>{{#targetgroups}}<li>{{.}}</li>{{/targetgroups}}</ul>
        </td>
        <td>
            {{#str}} item:type, mod_confman {{/str}}
            <ul>{{#types}}<li>{{.}}</li>{{/types}}</ul>
        </td>
    </tr>
    <tr>
        <td colspan="2">{{{description}}}</td>
    </tr>
    <tr>
        <td colspan="2">{{{memo}}}</td>
    </tr>
</table>
{{/items}}
